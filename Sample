import pandas as pd

# Load the two CSV files
file_before = 'path_to_file_before.csv'
file_after = 'path_to_file_after.csv'

df_before = pd.read_csv(file_before)
df_after = pd.read_csv(file_after)

# Compare the column names of both DataFrames
columns_before = df_before.columns
columns_after = df_after.columns

# Identify and print differences in column names
if list(columns_before) == list(columns_after):
    print("No changes in column names.")
else:
    print("Changes in column names detected:")
    print("Columns in file before change:")
    print(columns_before)
    print("Columns in file after change:")
    print(columns_after)

    # Identify specific differences
    diff_before = set(columns_before) - set(columns_after)
    diff_after = set(columns_after) - set(columns_before)

    if diff_before:
        print("\nColumns removed or changed:")
        for col in diff_before:
            print(col)

    if diff_after:
        print("\nNew columns added or changed:")
        for col in diff_after:
            print(col)
