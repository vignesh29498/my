import pandas as pd

# Load the two CSV files
file_before = 'path_to_file_before.csv'
file_after = 'path_to_file_after.csv'

df_before = pd.read_csv(file_before)
df_after = pd.read_csv(file_after)

# Get the union of row indices and column names
rows_before = set(df_before.index)
rows_after = set(df_after.index)
cols_before = set(df_before.columns)
cols_after = set(df_after.columns)

all_rows = sorted(rows_before.union(rows_after))
all_cols = sorted(cols_before.union(cols_after))

# Compare cell by cell
for row in all_rows:
    for col in all_cols:
        value_before = df_before.at[row, col] if row in df_before.index and col in df_before.columns else None
        value_after = df_after.at[row, col] if row in df_after.index and col in df_after.columns else None
        
        if value_before != value_after:
            print(f"Difference found at cell ({row}, {col}):")
            print(f"File before change: {value_before}")
            print(f"File after change: {value_after}")
            print()  # Print a blank line for readability
