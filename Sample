import pandas as pd

def update_positions_with_empty(csv_file, positions_list, output_file):
    # Read the existing CSV file
    try:
        df = pd.read_csv(csv_file, header=None)
    except FileNotFoundError:
        print(f"File '{csv_file}' not found.")
        return

    # Ensure DataFrame has enough columns to accommodate all positions
    max_position = max(positions_list)
    if max_position > len(df.columns):
        for _ in range(max_position - len(df.columns)):
            df[len(df.columns)] = 'NA'
    
    # Update specified positions in the first row with "empty"
    for position in positions_list:
        df.iloc[0, position - 1] = "empty"  # Adjusting for 0-based indexing
    
    # Save the DataFrame to a CSV file, overwriting the existing file
    df.to_csv(output_file, index=False, header=False)
    print(f"CSV file '{output_file}' updated successfully.")

# Example usage
positions_list = [3, 8, 12]  # Specific row positions to be updated with "empty"
csv_file = 'output.csv'
output_file = 'output.csv'

update_positions_with_empty(csv_file, positions_list, output_file)
