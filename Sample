import pandas as pd

def create_output_csv(input_values, input_positions, matched_values, matched_labels, output_file):
    # Determine the maximum position to ensure all positions fit
    max_position = max(input_positions)
    
    # Create an empty DataFrame with the required number of columns
    df = pd.DataFrame(columns=range(max_position))
    
    # Initialize the DataFrame with placeholder values
    df.loc[0] = ['NA'] * max_position
    
    # Insert the matched labels into the specified positions
    for label, position in zip(matched_labels, input_positions):
        df.iloc[0, position - 1] = label  # Position is 1-based, so subtract 1 for 0-based indexing
    
    # Save the DataFrame to a CSV file (overwrite if exists)
    df.to_csv(output_file, index=False, header=False)
    
    print(f"CSV file '{output_file}' created/overwritten successfully.")

# Example usage
input_values = ['2', 'usd', '...']
input_positions = [3, 8, 12]
matched_values = ['USD']
matched_labels = ['country']
output_file = 'output.csv'

create_output_csv(input_values, input_positions, matched_values, matched_labels, output_file)
