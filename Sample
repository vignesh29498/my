def remove_common_values(list1, *other_lists):
  """Removes values from list1 that are present in any of the other_lists.

  Args:
      list1: The list from which to remove values.
      *other_lists: A variable number of lists to compare against list1.

  Returns:
      A new list containing elements from list1 that are not present in any of the other_lists.
  """

  all_values = set(list1 + [*other_lists])  # Combine all lists into a set
  return [x for x in list1 if x not in all_values - set(list1)]  # Filter list1 based on combined set

# Example usage
list1 = ["a", "b", "c"]
list2 = ["hdh", "b", "ghjd"]
list3 = ["a", "jdj", "jdj", "jdj", "c"]

filtered_list1 = remove_common_values(list1, list2, list3)
print(filtered_list1)  # Output: [] (empty list)
