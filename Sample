import xml.etree.ElementTree as ET

def compare_xml(file1, file2):
    # Parse XML files
    tree1 = ET.parse(file1)
    tree2 = ET.parse(file2)
    
    root1 = tree1.getroot()
    root2 = tree2.getroot()

    # Helper function to convert XML element to a dictionary
    def element_to_dict(element):
        return {child.tag: child.text for child in element}

    # Convert roots to dictionaries
    dict1 = element_to_dict(root1)
    dict2 = element_to_dict(root2)

    # Compare dictionaries
    return dict1 == dict2

# File paths
file1 = 'file1.xml'
file2 = 'file2.xml'

# Compare XML files
if compare_xml(file1, file2):
    print("XML files match.")
else:
    print("XML files do not match.")
    # Optionally, print details of differences
    print(f"Details of mismatch in {file1} and {file2}")
