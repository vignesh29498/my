import re

def extract_dml_info(file_path):
    with open(file_path, 'r') as file:
        dml_content = file.read()

    pattern = r'(\w+).*?maximum_length=(\d+) (\w+) = (NULL|NOT NULL)".*?";'
    matches = re.findall(pattern, dml_content)

    result = []
    for match in matches:
        datatype, max_length, field_name, null_status = match
        result.append({
            'datatype': datatype,
            'max_length': max_length,
            'field_name': field_name,
            'null_status': null_status
        })
    
    return result

# File path to the DML file
file_path = 'your_dml_file.dml'
dml_info = extract_dml_info(file_path)

# Printing the extracted information
for info in dml_info:
    print(info)
