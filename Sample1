import pandas as pd
import re

def extract_and_remove(value):
    match = re.search(r'/\*(.*?)\*/', value)
    if match:
        modified_value = value.replace(match.group(0), '').strip()
        return modified_value, match.group(1).strip()
    return value, None

csv_file_path = 'your_file.csv'  # Replace with your file path
df = pd.read_csv(csv_file_path)

df['modified_column'], df['extracted_values'] = zip(*df['your_column'].apply(extract_and_remove))

print(df[['your_column', 'modified_column', 'extracted_values']])
df.to_csv('modified_values.csv', index=False)
