import pandas as pd
import os

def generate_output_filename(input_filename):
    base, ext = os.path.splitext(input_filename)
    return f"output_{base}{ext}"

# Load the existing CSV file
input_file = 'abc.csv'
df = pd.read_csv(input_file)

# Perform any operations or modifications on 'df' here if needed

# Generate the output file name based on the input file name
output_file = generate_output_filename(os.path.basename(input_file))
df.to_csv(output_file, index=False)

print(f"New CSV file '{output_file}' has been created.")


import csv

# Define your list
data_list = ['item1', 'item2', 'item3', 'item4']

# Specify the CSV file path
csv_file = 'example.csv'

# Open the CSV file in write mode
with open(csv_file, 'w', newline='') as file:
    writer = csv.writer(file)
    
    # Write each item in the list to the first column
    for item in data_list:
        writer.writerow([item])

print(f"List written to '{csv_file}' successfully.")
