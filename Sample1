import pandas as pd

input_file = 'input.csv'
df_input = pd.read_csv(input_file)

column_to_extract = 'column_name'
extracted_column = df_input[column_to_extract]

output_file = 'output.csv'
df_output = pd.read_csv(output_file)

if len(extracted_column) == len(df_output):
    df_output.insert(0, column_to_extract, extracted_column)
    df_output.to_csv(output_file, index=False)
else:
    print("Error: The number of rows in the input file and output file do not match.")
