import pandas as pd

def replace_value_with_full_list(file_path, value_to_replace, replacement_list):
    # Read the CSV file into a DataFrame
    df = pd.read_csv(file_path)
    
    # Check if the file has at least one column
    if df.empty or df.shape[1] == 0:
        raise ValueError("The CSV file is empty or does not have any columns")
    
    # Convert the replacement list to a comma-separated string
    replacement_str = ', '.join(replacement_list)
    
    # Replace occurrences of value_to_replace with the replacement string
    df.iloc[:, 0] = df.iloc[:, 0].replace(value_to_replace, replacement_str)
    
    # Save the modified DataFrame back to a CSV file
    df.to_csv(file_path, index=False)
    
    print(f"Replaced '{value_to_replace}' with '{replacement_str}' in the first column.")

# Example usage
file_path = 'path/to/your/file.csv'
value_to_replace = 'n'
replacement_list = ['ab', 'gh', 'hiy', 'ljy', 'h']

replace_value_with_full_list(file_path, value_to_replace, replacement_list)
